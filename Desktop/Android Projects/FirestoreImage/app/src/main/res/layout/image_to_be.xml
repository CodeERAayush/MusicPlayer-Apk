<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:padding="2dp"
        android:id="@+id/nameHolder"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/coolskull"
            android:gravity="start"
            app:civ_border_color="@color/grey_02"
            app:civ_border_width="1dp"
            />
            <TextView
                android:id="@+id/idName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:padding="2dp"
                android:layout_marginLeft="1dp"
                android:textColor="@color/black"
                ></TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameHolder"
        android:id="@+id/contentHolder"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="288dp"
            android:maxHeight="500dp"
            android:src="@color/grey_02"
            android:padding="10dp"
            android:id="@+id/showImage"
            />

            <TextView
                android:id="@+id/titleHold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showImage"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="Title"
                android:layout_marginLeft="10dp"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/captionHold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleHold"
                android:text="Here shows the description that we written while posting the image!"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                style="@style/TextAppearance.MaterialComponents.Caption"/>
    </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>